---
interface Props {
  title: string;
}

const { title } = Astro.props;
import FluidEffect from '@components/fluideffect.astro';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Software Developer" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" href="/favicon.svg" />
    <meta property="og:title" content="Varshith Pawar H R" />
    <meta property="og:description" content="Software Developer" />
    <meta property="og:image" content="#" />
    <meta property="og:url" content="#" />
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="Varshith Pawar H R" />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      rel="preload"
      as="style"
      href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap"
    />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap"
      media="print"
      onload="this.media='all'"
    />
    <noscript>
      <link
        rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap"
      />
    </noscript>

    <title>{title}</title>
  </head>
  <body class="bg-[--background] text-[--white] px-6 md:px-12 lg:px-24 xl:px-48">
    <FluidEffect/>
    <slot />
  </body>
</html>

<style is:global>
  :root {
    --background: #0c0c0c;
    --background-alt: #161616;
    --sec: #00e5ff;
    --accent-purple: #8a2be2;
    --accent-green: #39ff14;
    --pink: #ff007f;
    --white: #dfdfdf;
    --white-icon: #f3f3f398;
    --white-icon-tr: #f3f3f310;
    --shadow: 0 0 10px rgba(0, 229, 255, 0.3);
  }

  * {
    font-family: "Montserrat", -apple-system, system-ui, sans-serif;
    box-sizing: border-box;
    padding: 0;
    margin: 0;
  }

  *::selection {
    background-color: var(--sec);
    color: var(--background);
  }

  .glow {
    color: var(--sec);
    text-shadow: 0 0 8px var(--sec);
  }

  /* Scrollbar styles */
  ::-webkit-scrollbar {
    width: 15px;
  }

  ::-webkit-scrollbar-track {
    background: var(--background-alt);
    border-radius: 30px;
  }

  ::-webkit-scrollbar-thumb {
    background: var(--sec);
    border-radius: 10px;
  }

  ::-webkit-scrollbar-thumb:hover {
    background: var(--pink);
    box-shadow: 0 0 6px var(--pink);
  }

  /* Firefox scrollbar */
  * {
    scrollbar-width: thin;
    scrollbar-color: var(--white) var(--background-alt);
  }
</style>
